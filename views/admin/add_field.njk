<script>
  function add_field(allElements, oneElement) {
    return function() {
      const elements = document.querySelector(allElements);
      const fieldContainer = document.querySelectorAll(oneElement);
      // Realiza um clone do último ingrediente adicionado
      const newField = fieldContainer[fieldContainer.length - 1].cloneNode(true);
      // Não adiciona um novo input se o último tem um valor vazio
      if (newField.children[0].value == "") 
        return false;
      
      // Deixa o valor do input vazio
      newField.children[0].value = "";
      elements.appendChild(newField);
    };
  }
  document.querySelector(".add-ingredient").addEventListener("click",  add_field("#ingredients", ".ingredient"));

  document.querySelector(".add-step").addEventListener("click",  add_field("#steps", ".step"));

</script>