{% extends "../layout.njk" %}
{% block content %}
  <div class="admin_content">
    <div class="recipe" id="{{ recipe.id }}">
      <div class="same-line">
        <h1>Criando receita</h1>
        <div class="button_tooltip_container">
          <button form="form-create" type="submit" class="right">Salvar receita</button>
          <span class="tooltip_text">Select at least one photo</span>
        </div>
      </div>

      <form method="POST" action="/admin/recipes" enctype="multipart/form-data" id="form-create">
        {% include 'admin/recipes/fields.njk' %}
      </form>
    </div>
  </div>
{% endblock %}