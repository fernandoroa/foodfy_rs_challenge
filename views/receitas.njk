{% extends "layout.njk" %}

{% block content %}
  <section class="allcards">
        {% set x = -1 %}
      {% for item in items %}
      {% set x = x + 1 %}
        <div class="cardRecipe" id="{{x}}">
          <div class="card__image-container">
            <img src="{{item.image}}" alt="{{item.title}}">
          </div>
          <div class="card__content">
            <p>{{item.title}}</p>
          </div>
          <div class="card__info">
            <p>{{item.author}}</p>
          </div>
        </div>
      {% endfor %}
  </section>

  {% include "links.njk" %}

{% endblock %}
