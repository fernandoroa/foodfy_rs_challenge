{% extends "../layout.njk" %}
{% block content %}
  <div class="chef" id="{{ chef.id }}">
    <div class="same-line">
      <div></div>
      <a href="/admin/chefs/{{ chef.id }}/edit" class="button">Editar Chef</a>
    </div>
    <div class="chef_picture_text">
      <div class="chef__big_image-container">
        <img src="{{ chef.avatar_url }}" alt="{{ chef.name }}">
      </div>
      <div id="chef__name">
        <h1>Chef: {{ chef.name }}</h1>
      </div>
      <div id="chef__recipes_per_chef">
        <p>{{ chef_recipes[0].chef_recipes_total }} receitas</p>
      </div>
    </div>
    <h2>Receitas</h2>
    <section class="cards-manager">
      {% for recipe in chef_recipes %}
        <div class="cardRecipeManager">
          <div class="card__image-container-manager">
            <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
          </div>
          <div class="card_texts">
            <div class="card__title">
              <p>{{ recipe.title }}</p>
            </div>
            <div class="card__chef_name">
              <p>{{ recipe.chef_name }}</p>
            </div>
            <div class="visualizer" id="{{ recipe.recipes_id }}">
              <p>Visualizar</p>
            </div>
          </div>
        </div>
      {% endfor %}
    </section>
  </div>
  {% include "../../links.njk" %}
{% endblock %}