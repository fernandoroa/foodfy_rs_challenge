{% extends "./layout.njk" %}

{% block content %}

    <div class="same-line">
			<div class="admin-title">
				<h1>Gerenciar receitas</h1>
			</div>
			<a href="/admin/recipes/create" class="button">Nova Receita</a>
		</div>
		<section class="cards-manager">
			{% set x = -1 %}
			{% for item in items %}
			{% set x = x + 1 %}
				<div class="cardRecipeManager">
					<div class="card__image-container-manager">
						<img src="{{item.image}}" alt="{{item.title}}">
					</div>
					<div class="card_texts">
						<div class="card__title">
							<p>{{item.title}}</p>
						</div>
						<div class="card__author">
							<p>{{item.author}}</p>
						</div>
						<div class="visualizer" id="{{x}}">
							<p>Visualizar</p>
						</div>
					</div>
				</div>
			{% endfor %}
     	</section>

	 {% include "../links.njk" %}
		
{% endblock %}



